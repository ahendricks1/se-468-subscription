<h1>Billing</h1>

<% if @sub && @sub.on_trial? %>
  <p>You are trialing the <strong><%= @sub.stripe_plan %></strong> plan. </p>
  <p><%= link_to "Chane plan", edit_sub_path %>
<% elsif @sub && @sub.on_grace_period? %>
  <p>Your subscription has been canceled and you have access until <%= sub.ends_at.to_date.to_s(:long )%></p>
  <p><%= link_to "Resume subscription", resume_sub_path, method: :patch %></p>
<% elsif @sub && @sub.active? %>
  <p>You are subscribed to the <strong><%= @sub.stripe_plan %></strong> plan.<p>
  <p><%= link_to "Chane plan", edit_sub_path %>

<% else %>
  <p>You are not subscribed. <%= link_to "Subscribe", pricing_path %></p>
<% end %>

<hr />

<% if current_user.card_last4? %>
  <div><%= current_user.card_brand %> ending in <%= current_user.card_last4 %></div>
  <div>Expires <%= current_user.card_exp_month %> / <%= current_user.card_exp_year %></div>
  <%= link_to "Update card", edit_card_path %>
<% else %>
  <p>No card on file.</p>
  <%= link_to "Add card", edit_card_path %>
<% end %>

<% if @sub.active? && !@sub.on_grace_period? %>
  <hr />
  <%= link_to "Cancel subscription", sub_path, method: :delete, data: { confirm: "Are you sure you want to cancel?" } %>
<% end %>

<hr />

<h5>Invoices</h5>

<table class="table table-striped">
  <thead>
    <th>Date</th>
    <th>Card</th>
    <th>Amount</th>
    <th>Receipt</th>
  </thead>
  <tbody>
    <% current_user.charges.order(created_at: :desc).each do |charge| %>
      <tr>
        <td><%= charge.created_at.to_date.to_s(:long) %></td>
        <td><%= charge.card_brand %> ending in <%= charge.card_last4 %></td>
        <td><%= link_to "Download", charge_path(charge, format: pdf), target: :_blank %></td>
    <% end %>
  </tbody>
</table>